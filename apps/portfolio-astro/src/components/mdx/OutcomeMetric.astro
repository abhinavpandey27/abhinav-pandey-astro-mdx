---
type Emphasis = 'primary' | 'accent';
type Align = 'left' | 'center' | 'right';

interface Props {
  label: string;
  value: string;
  description?: string;
  emphasis?: Emphasis;
  align?: Align;
}

const {
  label,
  value,
  description,
  emphasis = 'primary',
  align = 'left'
} = Astro.props as Props;

const classes = [`outcome-metric`, `outcome-metric--${emphasis}`, `outcome-metric--align-${align}`].join(' ');
---

<figure class={classes}>
  <figcaption class="outcome-metric__label">{label}</figcaption>
  <div class="outcome-metric__value">{value}</div>
  {description && <p class="outcome-metric__description">{description}</p>}
</figure>

<style>
  .outcome-metric {
    border-radius: var(--radius-lg);
    border: 1px solid rgba(11, 12, 17, 0.14);
    padding: var(--space-lg);
    display: grid;
    gap: var(--space-xs);
    background: rgba(255, 255, 255, 0.92);
    color: var(--color-label-primary);
    min-width: 220px;
  }

  .outcome-metric--accent {
    border-color: rgba(87, 99, 255, 0.28);
    background: linear-gradient(140deg, rgba(87, 99, 255, 0.18), rgba(255, 255, 255, 0.96));
    color: #121633;
  }

  .outcome-metric__label {
    font-family: var(--font-sans);
    font-size: var(--text-label-size);
    line-height: var(--text-label-height);
    letter-spacing: var(--text-label-spacing);
    font-weight: var(--text-label-weight);
    text-transform: var(--text-label-case);
    color: var(--color-label-secondary);
    margin: 0;
  }

  .outcome-metric--accent .outcome-metric__label {
    color: rgba(61, 69, 214, 0.88);
  }

  .outcome-metric__value {
    font-family: var(--font-sans);
    font-size: var(--text-display-size); /* Use Display style */
    line-height: var(--text-display-height);
    letter-spacing: var(--text-display-spacing);
    font-weight: var(--text-display-weight);
  }

  .outcome-metric__description {
    margin: 0;
    font-family: var(--font-sans);
    font-size: var(--text-secondary-size);
    line-height: var(--text-secondary-height);
    letter-spacing: var(--text-secondary-spacing);
    font-weight: var(--text-secondary-weight);
    color: var(--color-label-secondary);
  }

  .outcome-metric--accent .outcome-metric__description {
    color: rgba(26, 32, 78, 0.8);
  }

  .outcome-metric--align-center {
    text-align: center;
  }

  .outcome-metric--align-right {
    text-align: right;
  }

  @media (max-width: 720px) {
    .outcome-metric {
      padding: var(--space-md);
    }
  }
</style>
