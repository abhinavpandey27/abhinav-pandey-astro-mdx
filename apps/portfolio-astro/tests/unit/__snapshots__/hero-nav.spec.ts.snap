exports[`HeroSection > matches compiled snapshot 1`] = `
"---
import CarouselIsland from './CarouselIsland.astro';

export type HeroCarouselItem = {
  src: string;
  alt: string;
  caption?: string;
  emphasis?: 'primary' | 'secondary';
  motionDelay?: number;
};

export type HeroHighlight = {
  kicker?: string;
  title: string;
  summary: string;
  metadata: Array<{ label: string; value: string }>;
  cta: { label: string; href: string; isExternal?: boolean };
};

interface Props {
  id?: string;
  heroTagline: string;
  intro: string;
  bioSnippet?: string;
  featured: HeroHighlight;
  carousel: HeroCarouselItem[];
  prefersReducedMotionCopy?: string;
}

const {
  id = 'hero',
  heroTagline,
  intro,
  bioSnippet,
  featured,
  carousel = [],
  prefersReducedMotionCopy
} = Astro.props as Props;
---

<section class="hero" id={id} aria-labelledby={\`\${id}-title\`} data-testid="hero-section">
  <div class="hero__inner">
    <div class="hero__copy">
      <p class="hero__eyebrow">Featured designer</p>
      <h1 class="hero__title" id={\`\${id}-title\`}>{heroTagline}</h1>
      <p class="hero__intro">{intro}</p>
      {bioSnippet && <p class="hero__bio">{bioSnippet}</p>}
      {prefersReducedMotionCopy && (
        <p class="hero__motion">{prefersReducedMotionCopy}</p>
      )}
    </div>

    <article class="hero__highlight">
      {featured.kicker && <p class="hero__highlight-kicker">{featured.kicker}</p>}
      <h2 class="hero__highlight-title">{featured.title}</h2>
      <p class="hero__highlight-summary">{featured.summary}</p>

      <dl class="hero__metadata">
        {featured.metadata.map((item) => (
          <div class="hero__metadata-item">
            <dt>{item.label}</dt>
            <dd>{item.value}</dd>
          </div>
        ))}
      </dl>

      <a
        class="hero__cta"
        href={featured.cta.href}
        target={featured.cta.isExternal ? '_blank' : undefined}
        rel={featured.cta.isExternal ? 'noopener noreferrer' : undefined}
      >
        <span>{featured.cta.label}</span>
        <span aria-hidden="true">↗</span>
      </a>
    </article>

    {carousel.length > 0 && (
      <CarouselIsland id={\`\${id}-carousel\`} items={carousel} />
    )}
  </div>
</section>

<style>
  .hero {
    padding: clamp(var(--space-xl), 10vh, 160px) clamp(var(--space-lg), 6vw, 120px)
      clamp(var(--space-2xl), 12vh, 200px);
    background: linear-gradient(
      160deg,
      rgba(255, 255, 255, 0.85) 0%,
      rgba(233, 233, 241, 0.65) 40%,
      rgba(244, 245, 255, 0.82) 100%
    );
  }

  .hero__inner {
    display: grid;
    grid-template-columns: minmax(0, 1.1fr) minmax(0, 0.9fr);
    gap: clamp(var(--space-xl), 4vw, var(--space-2xl));
    align-items: start;
    max-width: 1200px;
    margin: 0 auto;
  }

  .hero__copy {
    display: flex;
    flex-direction: column;
    gap: var(--space-md);
    max-width: 520px;
  }

  .hero__eyebrow {
    font-family: var(--font-family-ui);
    font-size: 12px;
    letter-spacing: 3px;
    text-transform: uppercase;
    color: var(--color-label-secondary);
    margin: 0;
  }

  .hero__title {
    margin: 0;
    font-family: var(--font-family-heading);
    font-size: clamp(38px, 5vw, 64px);
    line-height: 1.05;
    letter-spacing: var(--letter-spacing-h4);
  }

  .hero__intro {
    margin: 0;
    font-size: clamp(18px, 2.4vw, 22px);
    line-height: 1.4;
    color: var(--color-label-secondary);
  }

  .hero__bio {
    margin: 0;
    color: var(--color-label-secondary);
  }

  .hero__motion {
    margin: 0;
    padding: 10px 14px;
    border-radius: var(--radius-md);
    background: rgba(255, 255, 255, 0.7);
    border: 1px solid rgba(11, 12, 17, 0.12);
    font-family: var(--font-family-ui);
    font-size: 12px;
    letter-spacing: 1px;
    text-transform: uppercase;
  }

  .hero__highlight {
    position: relative;
    padding: clamp(var(--space-lg), 4vw, var(--space-2xl));
    border-radius: var(--radius-lg);
    background: rgba(18, 19, 30, 0.96);
    color: var(--color-label-primary-dark);
    overflow: hidden;
    box-shadow: var(--shadow-elevated);
  }

  .hero__highlight::after {
    content: '';
    position: absolute;
    inset: 0;
    background: radial-gradient(
      circle at 20% 20%,
      rgba(255, 255, 255, 0.2),
      rgba(255, 255, 255, 0) 70%
    );
    pointer-events: none;
  }

  .hero__highlight > * {
    position: relative;
    z-index: 1;
  }

  .hero__highlight-kicker {
    margin: 0 0 var(--space-sm);
    font-family: var(--font-family-ui);
    font-size: 12px;
    letter-spacing: 2px;
    text-transform: uppercase;
    color: var(--color-label-secondary-dark);
  }

  .hero__highlight-title {
    margin: 0 0 var(--space-sm);
    font-size: clamp(26px, 3vw, 34px);
    line-height: 1.2;
  }

  .hero__highlight-summary {
    margin: 0 0 var(--space-md);
    color: var(--color-label-secondary-dark);
    font-size: 16px;
    line-height: 1.5;
  }

  .hero__metadata {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(120px, 1fr));
    gap: var(--space-md);
    margin: 0 0 var(--space-lg);
  }

  .hero__metadata-item {
    display: grid;
    gap: 4px;
  }

  .hero__metadata-item dt {
    font-family: var(--font-family-ui);
    font-size: 12px;
    letter-spacing: 1px;
    text-transform: uppercase;
    color: var(--color-label-tertiary-dark);
    margin: 0;
  }

  .hero__metadata-item dd {
    margin: 0;
    font-size: 16px;
    font-weight: 500;
    color: var(--color-label-primary-dark);
  }

  .hero__cta {
    display: inline-flex;
    align-items: center;
    gap: var(--space-xs);
    padding: 12px 16px;
    border-radius: 999px;
    background: rgba(255, 255, 255, 0.12);
    color: var(--color-label-primary-dark);
    font-family: var(--font-family-ui);
    font-size: 13px;
    letter-spacing: 2px;
    text-transform: uppercase;
    border: 1px solid rgba(255, 255, 255, 0.24);
    transition: transform 0.2s ease, background 0.2s ease;
  }

  .hero__cta:hover,
  .hero__cta:focus-visible {
    transform: translateY(-2px);
    background: rgba(255, 255, 255, 0.24);
  }

  @media (prefers-reduced-motion: reduce) {
    .hero,
    .hero__cta {
      transition: none;
    }
  }

  @media (max-width: 960px) {
    .hero__inner {
      grid-template-columns: 1fr;
    }

    .hero__highlight {
      order: 3;
    }
  }

  @media (max-width: 720px) {
    .hero {
      padding: clamp(var(--space-lg), 8vh, var(--space-xl))
        clamp(var(--space-md), 6vw, var(--space-lg));
    }
  }
</style>
"
`;

exports[`NavHeader > matches compiled snapshot and preserves navigation semantics 1`] = `
"---
export type NavLink = {
  label: string;
  href: string;
};

export type SocialLink = {
  label: string;
  url: string;
  ariaLabel?: string;
};

interface Props {
  name: string;
  location: string;
  navLinks: NavLink[];
  socialLinks: SocialLink[];
  menuLabel?: string;
}

const {
  name,
  location,
  navLinks = [],
  socialLinks = [],
  menuLabel = 'Menu'
} = Astro.props as Props;
---

<header class="nav-header" data-testid="nav-header">
  <div class="nav-header__inner">
    <a class="nav-header__brand" href="#top">
      <span class="nav-header__name">{name}</span>
      <span class="nav-header__location">{location}</span>
    </a>

    <nav aria-label="Primary" class="nav-header__primary">
      <ul class="nav-header__links" role="list">
        {navLinks.map((link) => (
          <li>
            <a href={link.href} class="nav-header__link">
              <span aria-hidden="true">☩</span>
              <span>{link.label}</span>
            </a>
          </li>
        ))}
      </ul>
    </nav>

    <nav aria-label="Social" class="nav-header__social">
      <ul class="nav-header__social-links" role="list">
        {socialLinks.map((link) => (
          <li>
            <a
              class="nav-header__social-link"
              href={link.url}
              target="_blank"
              rel="noopener noreferrer"
              aria-label={link.ariaLabel ?? link.label}
            >
              {link.label}
            </a>
          </li>
        ))}
      </ul>
    </nav>

    <button type="button" class="nav-header__menu" aria-label={menuLabel}>
      <span class="nav-header__menu-icon" aria-hidden="true"></span>
      <span class="nav-header__menu-label">{menuLabel}</span>
    </button>
  </div>
</header>

<style>
  .nav-header {
    position: sticky;
    top: 0;
    z-index: 10;
    background: rgba(255, 255, 255, 0.8);
    backdrop-filter: blur(14px);
    border-bottom: 1px solid rgba(11, 12, 17, 0.08);
  }

  .nav-header__inner {
    display: grid;
    grid-template-columns: 1fr auto auto;
    align-items: center;
    gap: var(--space-lg);
    padding: var(--space-sm) clamp(var(--space-lg), 5vw, var(--space-2xl));
    max-width: 1200px;
    margin: 0 auto;
  }

  .nav-header__brand {
    display: flex;
    flex-direction: column;
    gap: 2px;
    font-family: var(--font-family-heading);
    font-size: clamp(18px, 2.2vw, 22px);
    line-height: 1.1;
    letter-spacing: var(--letter-spacing-body-lg);
    color: var(--color-label-primary);
  }

  .nav-header__name {
    font-weight: 600;
  }

  .nav-header__location {
    font-family: var(--font-family-ui);
    font-size: 12px;
    letter-spacing: 0.8px;
    text-transform: uppercase;
    color: var(--color-label-secondary);
  }

  .nav-header__primary,
  .nav-header__social {
    display: flex;
  }

  .nav-header__links,
  .nav-header__social-links {
    display: flex;
    align-items: center;
    gap: var(--space-md);
    margin: 0;
    padding: 0;
    list-style: none;
  }

  .nav-header__link {
    display: inline-flex;
    align-items: center;
    gap: var(--space-xs);
    font-family: var(--font-family-ui);
    font-size: 13px;
    letter-spacing: 2px;
    text-transform: uppercase;
    color: var(--color-label-secondary);
    transition: color 0.2s ease;
  }

  .nav-header__link:hover,
  .nav-header__link:focus-visible {
    color: var(--color-label-primary);
  }

  .nav-header__social-link {
    font-family: var(--font-family-ui);
    font-size: 12px;
    letter-spacing: 1px;
    text-transform: uppercase;
    padding: 6px 10px;
    border-radius: var(--radius-sm);
    border: 1px solid rgba(11, 12, 17, 0.18);
    background: rgba(255, 255, 255, 0.6);
    transition: border-color 0.2s ease, background 0.2s ease;
  }

  .nav-header__social-link:hover,
  .nav-header__social-link:focus-visible {
    border-color: rgba(11, 12, 17, 0.4);
    background: rgba(255, 255, 255, 0.95);
  }

  .nav-header__menu {
    display: inline-flex;
    align-items: center;
    gap: var(--space-xs);
    border: 1px solid rgba(11, 12, 17, 0.16);
    border-radius: 999px;
    padding: 6px 14px;
    background: rgba(255, 255, 255, 0.6);
    font-family: var(--font-family-ui);
    font-size: 12px;
    letter-spacing: 1px;
    text-transform: uppercase;
    color: var(--color-label-primary);
    cursor: pointer;
    transition: transform 0.2s ease, border-color 0.2s ease;
  }

  .nav-header__menu:hover,
  .nav-header__menu:focus-visible {
    transform: translateY(-1px);
    border-color: rgba(11, 12, 17, 0.32);
  }

  .nav-header__menu-icon {
    position: relative;
    width: 14px;
    height: 14px;
  }

  .nav-header__menu-icon::before,
  .nav-header__menu-icon::after {
    content: '';
    position: absolute;
    left: 0;
    right: 0;
    height: 1px;
    background: currentColor;
  }

  .nav-header__menu-icon::before {
    top: 4px;
  }

  .nav-header__menu-icon::after {
    bottom: 4px;
  }

  @media (max-width: 960px) {
    .nav-header__inner {
      grid-template-columns: 1fr auto;
      grid-template-areas:
        'brand menu'
        'primary primary'
        'social social';
      row-gap: var(--space-sm);
    }

    .nav-header__brand {
      grid-area: brand;
    }

    .nav-header__primary {
      grid-area: primary;
      justify-content: flex-start;
    }

    .nav-header__social {
      grid-area: social;
    }

    .nav-header__social-links {
      flex-wrap: wrap;
      gap: var(--space-sm);
    }
  }

  @media (max-width: 720px) {
    .nav-header {
      backdrop-filter: blur(18px);
    }

    .nav-header__inner {
      gap: var(--space-sm);
      padding-inline: clamp(var(--space-md), 5vw, var(--space-lg));
    }

    .nav-header__links {
      gap: var(--space-sm);
    }

    .nav-header__link {
      font-size: 11px;
    }

    .nav-header__social-links {
      justify-content: flex-start;
    }
  }
</style>
"
`;
