---
import type { CollectionEntry } from 'astro:content';

interface Props {
  site: CollectionEntry<'site'>;
  id?: string;
}

const { site, id } = Astro.props as Props;
const data = site.data;

const emailHref = `mailto:${data.email}`;
const resume = data.resume;
const socialLinks = data.socialLinks ?? [];
---

<section class="contact-strip" id={id ?? 'contact'}>
  <div class="contact-strip__inner">
    <div class="contact-strip__copy">
      <h2 class="contact-strip__title">Let’s collaborate</h2>
      <p class="contact-strip__lead">{data.contactCopy ?? 'Say hello and we can start sketching together.'}</p>
      <div class="contact-strip__actions">
        <a class="contact-strip__button contact-strip__button--primary" href={emailHref}>
          Email {data.email}
        </a>
        {resume?.file && (
          <a
            class="contact-strip__button contact-strip__button--ghost"
            href={resume.file}
            download
          >
            {resume.label ?? 'Download résumé'}
            {resume.size && <span class="contact-strip__button-meta">{resume.size.toFixed(1)} MB</span>}
          </a>
        )}
      </div>
    </div>

    {socialLinks.length > 0 && (
      <nav aria-label="Social links" class="contact-strip__social">
        <ul>
          {socialLinks.map((link) => (
            <li>
              <a href={link.url} target="_blank" rel="noopener noreferrer" aria-label={link.ariaLabel ?? link.label}>
                {link.label}
              </a>
            </li>
          ))}
        </ul>
      </nav>
    )}
  </div>
</section>

<style>
  .contact-strip {
    background: var(--theme-bg, linear-gradient(120deg, rgba(17, 19, 32, 0.94), rgba(11, 12, 17, 1)));
    color: var(--theme-text, var(--color-label-primary-dark));
    padding: clamp(var(--space-xl), 12vh, 180px) clamp(var(--space-lg), 6vw, 120px);
    min-height: 100vh;
    transition: background-color 0.8s cubic-bezier(0.4, 0, 0.2, 1), 
      color 0.8s cubic-bezier(0.4, 0, 0.2, 1);
  }

  @media (prefers-reduced-motion: reduce) {
    .contact-strip {
      transition: background-color 0.15s ease, color 0.15s ease;
    }
  }

  .contact-strip__inner {
    max-width: 1040px;
    margin: 0 auto;
    display: grid;
    gap: clamp(var(--space-lg), 4vw, var(--space-2xl));
    grid-template-columns: minmax(0, 2fr) minmax(0, 1fr);
    align-items: center;
  }

  .contact-strip__title {
    margin: 0 0 var(--space-sm);
    font-family: var(--theme-font-family, var(--font-family-heading));
    font-size: clamp(36px, 5vw, 52px);
    line-height: 1.05;
    color: var(--theme-text, inherit);
  }

  .contact-strip__lead {
    margin: 0 0 var(--space-md);
    font-family: var(--theme-font-family, inherit);
    font-size: clamp(18px, 2.2vw, 22px);
    line-height: 1.5;
    color: var(--theme-text, rgba(255, 255, 255, 0.72));
    opacity: 0.72;
  }

  .contact-strip__actions {
    display: flex;
    flex-wrap: wrap;
    gap: var(--space-sm);
  }

  .contact-strip__button {
    display: inline-flex;
    align-items: center;
    gap: var(--space-xs);
    border-radius: 999px;
    padding: 12px 20px;
    font-family: var(--font-family-ui);
    letter-spacing: 1.2px;
    text-transform: uppercase;
    font-size: 12px;
    border: 1px solid rgba(255, 255, 255, 0.24);
    color: inherit;
    transition: transform 0.2s ease, border-color 0.2s ease, background 0.2s ease;
  }

  .contact-strip__button:hover,
  .contact-strip__button:focus-visible {
    transform: translateY(-2px);
    border-color: rgba(255, 255, 255, 0.5);
  }

  .contact-strip__button--primary {
    background: rgba(255, 255, 255, 0.15);
  }

  .contact-strip__button--primary:hover,
  .contact-strip__button--primary:focus-visible {
    background: rgba(255, 255, 255, 0.28);
  }

  .contact-strip__button--ghost {
    background: transparent;
  }

  .contact-strip__button--ghost:hover,
  .contact-strip__button--ghost:focus-visible {
    background: rgba(255, 255, 255, 0.12);
  }

  .contact-strip__button-meta {
    font-size: 10px;
    letter-spacing: 1.2px;
    text-transform: uppercase;
    color: rgba(255, 255, 255, 0.65);
  }

  .contact-strip__social ul {
    margin: 0;
    padding: 0;
    list-style: none;
    display: flex;
    flex-wrap: wrap;
    gap: var(--space-sm);
    justify-content: flex-end;
  }

  .contact-strip__social a {
    display: inline-flex;
    align-items: center;
    gap: var(--space-xs);
    border-radius: 999px;
    padding: 10px 16px;
    font-family: var(--font-family-ui);
    letter-spacing: 1.2px;
    text-transform: uppercase;
    font-size: 11px;
    color: rgba(255, 255, 255, 0.8);
    border: 1px solid rgba(255, 255, 255, 0.18);
    transition: transform 0.2s ease, background 0.2s ease, border-color 0.2s ease;
  }

  .contact-strip__social a:hover,
  .contact-strip__social a:focus-visible {
    transform: translateY(-2px);
    border-color: rgba(255, 255, 255, 0.4);
    background: rgba(255, 255, 255, 0.12);
  }

  @media (max-width: 900px) {
    .contact-strip__inner {
      grid-template-columns: 1fr;
      align-items: flex-start;
      gap: var(--space-lg);
    }

    .contact-strip__social ul {
      justify-content: flex-start;
    }
  }

  @media (max-width: 720px) {
    .contact-strip {
      padding: clamp(var(--space-lg), 10vh, 160px)
        clamp(var(--space-md), 6vw, var(--space-xl));
    }

    .contact-strip__actions {
      flex-direction: column;
      align-items: stretch;
    }

    .contact-strip__button {
      justify-content: center;
    }

    .contact-strip__social ul {
      flex-wrap: wrap;
      gap: var(--space-xs);
    }

    .contact-strip__social a {
      width: 100%;
      justify-content: center;
    }
  }
</style>
