---
import ProjectList from './ProjectList.astro';
import type { ProjectListItem } from './ProjectList.astro';

interface Props {
  id?: string;
  heroTagline: string;
  intro: string;
  bioSnippet?: string;
  projectList: ProjectListItem[];
}

const {
  id = 'hero',
  heroTagline,
  intro,
  bioSnippet,
  projectList = []
} = Astro.props as Props;
---

<section class="hero-block" id={id} aria-labelledby={`${id}-title`} data-testid="hero-section">
  <div class="hero-block__container">
    <div class="hero-block__content">
      <div class="hero-block__header">
        <h1 class="hero-block__headline" id={`${id}-title`}>{heroTagline}</h1>
        {intro && (
          <div class="hero-block__intro-wrapper">
            <p class="hero-block__intro">{intro}</p>
            {bioSnippet && <p class="hero-block__bio">{bioSnippet}</p>}
          </div>
        )}
      </div>

      {projectList.length > 0 && (
        <div class="hero-block__project-list">
          <ProjectList projects={projectList} />
        </div>
      )}
    </div>
  </div>
</section>

<style>
  .hero-block {
    padding: 80px var(--space-xl);
    min-height: auto;
    display: flex;
    flex-direction: column;
    justify-content: center;
    background: var(--surface-card);
    color: var(--color-label-primary);
    margin-bottom: 48px;
    border-radius: var(--radius-md);
    box-shadow: var(--shadow-soft);
  }

  .hero-block__container {
    width: 100%;
    max-width: 1200px;
    margin: 0 auto;
  }

  .hero-block__content {
    display: flex;
    flex-direction: column;
    gap: 64px;
  }

  .hero-block__header {
    display: grid;
    grid-template-columns: 1.2fr 0.8fr;
    gap: var(--space-2xl);
    align-items: start;
  }

  .hero-block__headline {
    margin: 0;
    font-family: var(--font-sans);
    font-size: var(--text-display-size);
    line-height: var(--text-display-height);
    letter-spacing: var(--text-display-spacing);
    font-weight: var(--text-display-weight);
    color: var(--color-label-primary);
  }

  .hero-block__intro-wrapper {
    display: flex;
    flex-direction: column;
    gap: var(--space-sm);
    padding-top: 8px;
  }

  .hero-block__intro {
    margin: 0;
    font-family: var(--font-sans);
    font-size: var(--text-title-size); /* Title Style */
    line-height: var(--text-title-height);
    letter-spacing: var(--text-title-spacing);
    font-weight: 400;
    color: var(--color-label-secondary);
  }

  .hero-block__bio {
    margin: 0;
    font-family: var(--font-sans);
    font-size: var(--text-secondary-size);
    line-height: var(--text-secondary-height);
    letter-spacing: var(--text-secondary-spacing);
    font-weight: var(--text-secondary-weight);
    color: var(--color-label-tertiary);
  }

  .hero-block__project-list {
    width: 100%;
    display: flex;
    flex-direction: column;
    gap: var(--space-md);
  }

  @media (max-width: 1024px) {
    .hero-block {
      padding: var(--space-xl) var(--space-lg);
    }

    .hero-block__header {
      grid-template-columns: 1fr;
      gap: var(--space-lg);
    }
    
    .hero-block__intro-wrapper {
      padding-top: 0;
    }
  }

  @media (max-width: 720px) {
    .hero-block {
      padding: var(--space-lg) var(--space-md);
    }
    
    .hero-block__content {
      gap: 48px;
    }
  }
</style>
