---
export type NavLink = {
  label: string;
  href: string;
};

export type SocialLink = {
  label: string;
  url: string;
  ariaLabel?: string;
  isResume?: boolean;
};

interface Props {
  name: string;
  location: string;
  navLinks: NavLink[];
  socialLinks: SocialLink[];
  menuLabel?: string;
}

const {
  name,
  location,
  navLinks = [],
  socialLinks = [],
  menuLabel = 'Menu'
} = Astro.props as Props;
---

<header class="nav-header" data-testid="nav-header">
  <div class="nav-header__inner">
    <div class="nav-header__left">
      <a class="nav-header__brand" href="#top">
        <span class="nav-header__name">{name}</span>
        <span class="nav-header__location">{location}</span>
      </a>

      <nav aria-label="Primary" class="nav-header__primary">
        <ul class="nav-header__links" role="list">
          {navLinks.map((link) => (
            <li>
              <a href={link.href} class="nav-header__link">
                <span aria-hidden="true">☩</span>
                <span>{link.label}</span>
              </a>
            </li>
          ))}
        </ul>
      </nav>
    </div>

    <div class="nav-header__right">
      <nav aria-label="Social" class="nav-header__social">
        <ul class="nav-header__social-links" role="list">
          {socialLinks.slice(0, 2).map((link) => (
            <li>
              <a
                class="nav-header__social-link"
                href={link.url}
                target={link.isResume ? undefined : '_blank'}
                rel={link.isResume ? undefined : 'noopener noreferrer'}
                aria-label={link.ariaLabel ?? link.label}
                download={link.isResume ? true : undefined}
              >
                {link.label} {link.isResume ? '↓' : '↗'}
              </a>
            </li>
          ))}
        </ul>
        {socialLinks.length > 2 && (
          <ul class="nav-header__social-links" role="list">
            {socialLinks.slice(2, 4).map((link) => (
              <li>
                <a
                  class="nav-header__social-link"
                  href={link.url}
                  target={link.isResume ? undefined : '_blank'}
                  rel={link.isResume ? undefined : 'noopener noreferrer'}
                  aria-label={link.ariaLabel ?? link.label}
                  download={link.isResume ? true : undefined}
                >
                  {link.label} {link.isResume ? '↓' : '↗'}
                </a>
              </li>
            ))}
          </ul>
        )}
      </nav>

      <button type="button" class="nav-header__menu" aria-label={menuLabel}>
        <span class="nav-header__menu-label">{menuLabel}</span>
        <span class="nav-header__menu-icon" aria-hidden="true"></span>
      </button>
    </div>
  </div>
</header>

<style>
  .nav-header {
    position: sticky;
    top: 0;
    z-index: 10;
    background: rgba(255, 255, 255, 0.8);
    backdrop-filter: blur(14px);
    border-bottom: 1px solid rgba(11, 12, 17, 0.08);
    transition: background-color 0.6s ease, border-color 0.6s ease;
  }

  /* Ensure nav header maintains contrast with theme */
  [data-active-theme] .nav-header {
    background: color-mix(in srgb, var(--theme-bg, #ffffff) 85%, transparent);
    border-bottom-color: color-mix(in srgb, var(--theme-text, #0b0c11) 12%, transparent);
  }

  @media (prefers-reduced-motion: reduce) {
    .nav-header {
      transition: background-color 0.15s ease, border-color 0.15s ease;
    }
  }

  .nav-header__inner {
    display: flex;
    align-items: center;
    justify-content: space-between;
    gap: var(--space-2xl);
    padding: var(--space-sm) var(--space-md);
  }

  .nav-header__left {
    display: flex;
    align-items: center;
    gap: var(--space-2xl);
  }

  .nav-header__right {
    display: flex;
    align-items: center;
    gap: var(--space-2xl);
  }

  .nav-header__brand {
    display: flex;
    flex-direction: column;
    gap: 2px;
    font-family: var(--font-family-body);
    font-size: var(--font-size-body-md);
    line-height: var(--line-height-body-md);
    letter-spacing: var(--letter-spacing-body-md);
    color: var(--theme-text, var(--color-label-primary));
    width: 214px;
  }

  .nav-header__name {
    font-weight: var(--font-weight-body-md);
  }

  .nav-header__location {
    font-family: var(--font-family-body);
    font-size: var(--font-size-body-md);
    line-height: var(--line-height-body-md);
    letter-spacing: var(--letter-spacing-body-md);
    color: var(--color-label-secondary);
  }

  .nav-header__primary {
    display: flex;
  }

  .nav-header__social {
    display: flex;
    gap: var(--space-2xl);
  }

  .nav-header__links,
  .nav-header__social-links {
    display: flex;
    flex-direction: column;
    align-items: flex-start;
    gap: 0;
    margin: 0;
    padding: 0;
    list-style: none;
  }

  .nav-header__social-links {
    align-items: flex-end;
  }

  .nav-header__link {
    display: inline-flex;
    align-items: center;
    gap: var(--space-xs);
    font-family: var(--font-family-body);
    font-size: var(--font-size-body-md);
    line-height: var(--line-height-body-md);
    letter-spacing: var(--letter-spacing-body-md);
    color: var(--color-label-secondary);
    transition: color 0.2s ease;
  }

  .nav-header__link:hover,
  .nav-header__link:focus-visible {
    color: var(--theme-text, var(--color-label-primary));
  }

  .nav-header__social-link {
    font-family: var(--font-family-body);
    font-size: var(--font-size-body-md);
    line-height: var(--line-height-body-md);
    letter-spacing: var(--letter-spacing-body-md);
    color: var(--color-label-secondary);
    text-align: right;
    transition: color 0.2s ease;
    width: 117px;
  }

  .nav-header__social-link:hover,
  .nav-header__social-link:focus-visible {
    color: var(--theme-text, var(--color-label-primary));
  }

  .nav-header__menu {
    display: inline-flex;
    align-items: center;
    gap: var(--space-xs);
    border: none;
    border-radius: var(--radius-lg);
    padding: var(--space-xs) var(--space-sm);
    background: var(--color-label-primary);
    font-family: var(--font-family-ui);
    font-size: var(--font-size-label-lg);
    line-height: var(--line-height-label-lg);
    letter-spacing: var(--letter-spacing-label-lg);
    text-transform: uppercase;
    color: var(--color-surface-white);
    cursor: pointer;
    transition: transform 0.2s ease, opacity 0.2s ease;
    white-space: nowrap;
  }

  .nav-header__menu:hover,
  .nav-header__menu:focus-visible {
    opacity: 0.9;
  }

  .nav-header__menu-icon {
    position: relative;
    width: 16px;
    height: 16px;
  }

  .nav-header__menu-icon::before,
  .nav-header__menu-icon::after {
    content: '';
    position: absolute;
    left: 0;
    right: 0;
    height: 1px;
    background: currentColor;
  }

  .nav-header__menu-icon::before {
    top: 25%;
  }

  .nav-header__menu-icon::after {
    bottom: 25%;
  }

  @media (max-width: 960px) {
    .nav-header__inner {
      grid-template-columns: 1fr auto;
      grid-template-areas:
        'brand menu'
        'primary primary'
        'social social';
      row-gap: var(--space-sm);
    }

    .nav-header__brand {
      grid-area: brand;
    }

    .nav-header__primary {
      grid-area: primary;
      justify-content: flex-start;
    }

    .nav-header__social {
      grid-area: social;
    }

    .nav-header__social-links {
      flex-wrap: wrap;
      gap: var(--space-sm);
    }
  }

  @media (max-width: 720px) {
    .nav-header {
      backdrop-filter: blur(18px);
    }

    .nav-header__inner {
      gap: var(--space-sm);
      padding-inline: var(--space-sm);
    }

    .nav-header__links {
      gap: var(--space-sm);
    }

    .nav-header__link {
      font-size: 11px;
    }

    .nav-header__social-links {
      justify-content: flex-start;
    }
  }
</style>
