"---
import CarouselIsland from './CarouselIsland.astro';
import Intro from './Intro.astro';
import CaseStudyStack from './CaseStudyStack.astro';
import type { CaseStudyItem } from './CaseStudyStack.astro';

export type HeroCarouselItem = {
  src: string;
  alt: string;
  caption?: string;
  emphasis?: 'primary' | 'secondary' | 'supporting';
  motionDelay?: number;
  width?: number;
  height?: number;
};

export type HeroHighlight = {
  kicker?: string;
  title: string;
  summary: string;
  metadata: Array<{ label: string; value: string }>;
  cta: { label: string; href: string; isExternal?: boolean };
};

interface Props {
  id?: string;
  heroTagline: string;
  intro: string;
  bioSnippet?: string;
  featured: HeroHighlight;
  featuredImage?: { asset: string; alt: string };
  carousel: HeroCarouselItem[];
  caseStudies?: CaseStudyItem[];
  prefersReducedMotionCopy?: string;
}

const {
  id = 'hero',
  heroTagline,
  intro,
  bioSnippet,
  featured,
  featuredImage,
  carousel = [],
  caseStudies = [],
  prefersReducedMotionCopy
} = Astro.props as Props;
---

<section class="hero" id={id} aria-labelledby={\`\${id}-title\`} data-testid="hero-section">
  <div class="hero__content">
    {carousel.length > 0 && (
      <div class="hero__carousel-wrapper">
        <CarouselIsland id={\`\${id}-carousel\`} items={carousel} />
      </div>
    )}

    <div class="hero__bottom">
      <div class="hero__intro-section">
        <Intro intro={intro} id={\`\${id}-intro\`} />
      </div>

      <div class="hero__case-study-section">
        <CaseStudyStack caseStudies={caseStudies} id={\`\${id}-case-studies\`} />
      </div>
    </div>
  </div>
</section>

<style>
  .hero {
    display: contents;
  }

  .hero__content {
    grid-column: 1 / span 12;
    grid-row: 3 / span 13;
    display: grid;
    grid-template-columns: repeat(12, 1fr);
    grid-template-rows: auto 1fr;
    gap: var(--grid-gap);
    padding: var(--space-sm) var(--space-md);
  }

  .hero__carousel-wrapper {
    grid-column: 1 / -1;
    grid-row: 1;
    max-height: 600px;
    overflow: hidden;
    width: 100%;
    margin-left: calc(-1 * var(--space-md));
    margin-right: calc(-1 * var(--space-md));
  }

  .hero__bottom {
    grid-column: 1 / span 12;
    grid-row: 2;
    display: flex;
    align-items: flex-start;
    justify-content: space-between;
    gap: var(--space-lg);
    padding-top: var(--space-lg);
  }

  .hero__intro-section {
    flex: 0 0 auto;
  }

  .hero__case-study-section {
    flex: 0 0 auto;
  }

  @media (max-width: 960px) {
    .hero__bottom {
      flex-direction: column;
      align-items: stretch;
    }

    .hero__intro-section,
    .hero__case-study-section {
      width: 100%;
    }
  }

  @media (max-width: 720px) {
    .hero__content {
      grid-row: 3 / span 10;
    }

    .hero__carousel-wrapper {
      min-height: 300px;
    }
  }
</style>
"
`;

