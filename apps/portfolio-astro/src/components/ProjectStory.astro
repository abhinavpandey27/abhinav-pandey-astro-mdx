---
import { type CollectionEntry } from 'astro:content';
import CarouselIsland from './CarouselIsland.astro';
import type { HeroCarouselItem } from './HeroSection.astro';
import { Callout, OutcomeMetric } from './mdx';

type ProjectEntry = CollectionEntry<'projects'>;

type Variant = 'case-study' | 'metrics';

interface Props {
  project: ProjectEntry;
  variant?: Variant;
  id?: string;
}

const { project, variant = 'case-study', id } = Astro.props as Props;
const data = project.data;
const layoutVariant = data.storyLayout ?? variant;
const { Content } = await project.render();
const mdxComponents = { Callout, OutcomeMetric };

const team = data.team.length ? data.team.join(', ') : undefined;
const categories = data.categories ?? [];
const outcomes = data.outcomes ?? [];
const highlights = data.highlights ?? [];

const gallery: HeroCarouselItem[] = data.gallery.map((item) => ({
  src: item.asset,
  alt: item.alt,
  caption: item.caption,
  emphasis: item.emphasis ?? 'primary',
  motionDelay: item.motionDelay,
  width: 'width' in item ? item.width : undefined,
  height: 'height' in item ? item.height : undefined
}));

const background = data.motion?.sectionBackground ?? 'dark';
const prefersReducedMotionCopy = data.motion?.prefersReducedMotionCopy;

const sectionClasses = [
  'project-story',
  `project-story--${background}`,
  `project-story--${layoutVariant}`
].join(' ');

const metadata = [
  { label: 'Role', value: data.role },
  { label: 'Timeline', value: data.timeline },
  team ? { label: 'Team', value: team } : undefined
].filter(Boolean) as Array<{ label: string; value: string }>;
---

<section class={sectionClasses} id={id ?? project.slug} data-variant={layoutVariant}>
  <div class="project-story__inner">
    <header class="project-story__header">
      <div class="project-story__eyebrow">
        {data.hero?.kicker && <span class="project-story__kicker">{data.hero.kicker}</span>}
        {categories.length > 0 && (
          <ul class="project-story__categories" aria-label="Project categories" role="list">
            {categories.map((category) => (
              <li>{category}</li>
            ))}
          </ul>
        )}
      </div>

      <div class="project-story__hero-copy">
        <h2 class="project-story__title">{data.title}</h2>
        <p class="project-story__summary">{data.summary}</p>
      </div>

      <dl class="project-story__metadata">
        {metadata.map((item) => (
          <div class="project-story__metadata-item">
            <dt>{item.label}</dt>
            <dd>{item.value}</dd>
          </div>
        ))}
      </dl>

      {data.cta && (
        <a
          class="project-story__cta"
          href={data.cta.href}
          target={data.cta.isExternal ? '_blank' : undefined}
          rel={data.cta.isExternal ? 'noopener noreferrer' : undefined}
        >
          <span>{data.cta.label}</span>
          <span aria-hidden="true">â†—</span>
        </a>
      )}
    </header>

    {layoutVariant === 'case-study' && highlights.length > 0 && (
      <div class="project-story__highlights">
        {highlights.map((highlight) => (
          <article class="project-story__highlight">
            <h3>{highlight.title}</h3>
            <p>{highlight.body}</p>
          </article>
        ))}
      </div>
    )}

    {outcomes.length > 0 && (
      <div class="project-story__outcomes" data-display={layoutVariant}>
        {outcomes.map((outcome) => (
          <article class="project-story__outcome">
            <span class="project-story__outcome-label">{outcome.label}</span>
            <span class="project-story__outcome-value">{outcome.value}</span>
            {outcome.description && <p>{outcome.description}</p>}
          </article>
        ))}
      </div>
    )}

    {Content && (
      <div class="project-story__body">
        <Content components={mdxComponents} />
      </div>
    )}

    {prefersReducedMotionCopy && (
      <p class="project-story__motion">{prefersReducedMotionCopy}</p>
    )}

    {gallery.length > 0 && (
      <CarouselIsland id={`${project.slug}-gallery`} items={gallery} autoplayInterval={6000} />
    )}
  </div>
</section>

<style>
  .project-story {
    padding: clamp(var(--space-xl), 12vh, 220px) clamp(var(--space-lg), 6vw, 128px);
    transition: background 0.6s ease, color 0.6s ease;
  }

  .project-story--dark {
    background: #0b0c11;
    color: var(--color-label-primary-dark);
  }

  .project-story--light {
    background: #f6f6fb;
    color: var(--color-label-primary);
  }

  .project-story--accent {
    background: radial-gradient(120% 120% at 10% 10%, #1d2032 0%, #0b0c11 90%);
    color: var(--color-label-primary-dark);
  }

  .project-story__inner {
    display: grid;
    gap: clamp(var(--space-lg), 4vw, var(--space-2xl));
    max-width: 1160px;
    margin: 0 auto;
  }

  .project-story__header {
    display: grid;
    gap: var(--space-md);
  }

  .project-story__eyebrow {
    display: flex;
    flex-wrap: wrap;
    gap: var(--space-sm);
    align-items: center;
  }

  .project-story__kicker {
    font-family: var(--font-family-ui);
    text-transform: uppercase;
    letter-spacing: 1.6px;
    font-size: 12px;
  }

  .project-story__categories {
    display: flex;
    flex-wrap: wrap;
    gap: var(--space-xs);
    margin: 0;
    padding: 0;
    list-style: none;
  }

  .project-story__categories li {
    padding: 6px 12px;
    border-radius: 999px;
    border: 1px solid rgba(255, 255, 255, 0.2);
    font-family: var(--font-family-ui);
    font-size: 12px;
    letter-spacing: 1px;
    text-transform: uppercase;
  }

  .project-story--light .project-story__categories li {
    border-color: rgba(11, 12, 17, 0.18);
    background: rgba(255, 255, 255, 0.7);
    color: var(--color-label-primary);
  }

  .project-story__hero-copy {
    display: grid;
    gap: var(--space-sm);
    max-width: 720px;
  }

  .project-story__title {
    margin: 0;
    font-family: var(--font-family-heading);
    font-size: clamp(34px, 5vw, 52px);
    line-height: 1.1;
    letter-spacing: var(--letter-spacing-h4);
  }

  .project-story__summary {
    margin: 0;
    font-size: clamp(18px, 2.4vw, 22px);
    line-height: 1.45;
    color: inherit;
  }

  .project-story__metadata {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(140px, 1fr));
    gap: var(--space-md);
    margin: 0;
  }

  .project-story__metadata-item {
    display: grid;
    gap: 4px;
  }

  .project-story__metadata-item dt {
    font-family: var(--font-family-ui);
    text-transform: uppercase;
    letter-spacing: 1.8px;
    font-size: 12px;
    color: rgba(255, 255, 255, 0.6);
  }

  .project-story--light .project-story__metadata-item dt {
    color: var(--color-label-secondary);
  }

  .project-story__metadata-item dd {
    margin: 0;
    font-size: 16px;
    font-weight: 500;
  }

  .project-story__cta {
    justify-self: start;
    display: inline-flex;
    align-items: center;
    gap: var(--space-xs);
    padding: 12px 20px;
    border-radius: 999px;
    border: 1px solid rgba(255, 255, 255, 0.24);
    font-family: var(--font-family-ui);
    font-size: 13px;
    text-transform: uppercase;
    letter-spacing: 2px;
    color: inherit;
    transition: transform 0.2s ease, border-color 0.2s ease, background 0.2s ease;
  }

  .project-story__cta:hover,
  .project-story__cta:focus-visible {
    transform: translateY(-2px);
    border-color: rgba(255, 255, 255, 0.5);
    background: rgba(255, 255, 255, 0.12);
  }

  .project-story--light .project-story__cta {
    border-color: rgba(11, 12, 17, 0.18);
  }

  .project-story--light .project-story__cta:hover,
  .project-story--light .project-story__cta:focus-visible {
    border-color: rgba(11, 12, 17, 0.4);
    background: rgba(255, 255, 255, 0.9);
    color: var(--color-label-primary);
  }

  .project-story__highlights {
    display: grid;
    gap: var(--space-md);
    grid-template-columns: repeat(auto-fit, minmax(240px, 1fr));
  }

  .project-story__highlight {
    padding: var(--space-lg);
    border-radius: var(--radius-lg);
    background: rgba(255, 255, 255, 0.06);
    backdrop-filter: blur(12px);
    box-shadow: var(--shadow-soft);
  }

  .project-story__highlight h3 {
    margin: 0 0 var(--space-sm);
    font-size: clamp(20px, 3vw, 24px);
  }

  .project-story__highlight p {
    margin: 0;
    color: rgba(255, 255, 255, 0.78);
  }

  .project-story--light .project-story__highlight {
    background: rgba(255, 255, 255, 0.9);
    color: var(--color-label-primary);
  }

  .project-story--light .project-story__highlight p {
    color: var(--color-label-secondary);
  }

  .project-story__outcomes {
    display: grid;
    gap: var(--space-md);
    grid-template-columns: repeat(auto-fit, minmax(180px, 1fr));
  }

  .project-story__outcome {
    padding: var(--space-lg);
    border-radius: var(--radius-lg);
    border: 1px solid rgba(255, 255, 255, 0.14);
    display: grid;
    gap: var(--space-xs);
  }

  .project-story__outcome-label {
    font-family: var(--font-family-ui);
    text-transform: uppercase;
    letter-spacing: 2px;
    font-size: 12px;
    color: rgba(255, 255, 255, 0.65);
  }

  .project-story__outcome-value {
    font-size: clamp(22px, 4vw, 32px);
    font-weight: 600;
  }

  .project-story__outcome p {
    margin: 0;
    color: rgba(255, 255, 255, 0.78);
  }

  .project-story__body {
    display: grid;
    gap: var(--space-lg);
    font-size: var(--font-size-body-md);
    line-height: var(--line-height-body-md);
  }

  .project-story__body :global(p) {
    margin: 0;
    color: currentColor;
  }

  .project-story__body :global(h3) {
    font-family: var(--font-family-heading);
    font-size: clamp(24px, 3vw, 30px);
    margin: 0;
  }

  .project-story__body :global(ul),
  .project-story__body :global(ol) {
    padding-left: 1.2em;
    margin: 0;
    display: grid;
    gap: var(--space-xs);
  }

  .project-story--light .project-story__outcome {
    border-color: rgba(11, 12, 17, 0.12);
    background: rgba(255, 255, 255, 0.9);
    color: var(--color-label-primary);
  }

  .project-story--light .project-story__outcome-label {
    color: var(--color-label-secondary);
  }

  .project-story--light .project-story__outcome p {
    color: var(--color-label-secondary);
  }

  .project-story__motion {
    margin: 0;
    padding: 12px 16px;
    border-radius: var(--radius-md);
    border: 1px solid rgba(255, 255, 255, 0.18);
    font-family: var(--font-family-ui);
    font-size: 12px;
    letter-spacing: 1px;
    text-transform: uppercase;
  }

  .project-story--light .project-story__motion {
    border-color: rgba(11, 12, 17, 0.18);
    background: rgba(255, 255, 255, 0.8);
    color: var(--color-label-primary);
  }

  @media (max-width: 960px) {
    .project-story {
      padding: clamp(var(--space-lg), 10vh, 160px)
        clamp(var(--space-md), 6vw, var(--space-xl));
    }

    .project-story__highlight {
      padding: var(--space-md);
    }

    .project-story__outcome {
      padding: var(--space-md);
    }
  }
</style>
